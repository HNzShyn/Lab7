<div class="container col-md-6">
    <h2 >Login</h2>
    <form action="/login" method="post" style="margin-top: 15px;" class="card bg-light p-3">
        <div class="form-group">
            <h5 class="text-success">Username: </h5>
            <input class="form-control" type="text" name="username" id="" placeholder="Enter username" required>
            <br><br>
        </div>
        <div class="form-group">
            <h5 class="text-success">Password: </h5>
            <input class="form-control" type="password" name="password" placeholder="Enter Password" required>
            <br><br>
            <input type="submit" value="Login" class="btn btn-success">
        </div>
    </form>
</div>